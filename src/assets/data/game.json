    "pages": [
      {
        "article": {
          "sentences": [
            {
              "text": "今日は待ちに待った夏祭り！",
              "voice": "voice_1_1"
            },
            {
              "text": "色とりどりの浴衣を着た子どもたちが",
              "voice": "voice_1_2"
            },
            {
              "text": "笑顔いっぱいで会場に向かいます。",
              "voice": "voice_1_3"
            }
          ]
        },
        "illustration": "illustration1"
      },
      {
        "article": {
          "sentences": [
            {
              "text": "家族みんなでブルーシートを広げて、",
              "voice": "voice_2_1"
            },
            {
              "text": "最高の場所をゲット！",
              "voice": "voice_2_2"
            },
            {
              "text": "みんなでワクワクしながら花火を待ちます。",
              "voice": "voice_2_3"
            }
          ]
        },
        "illustration": "illustration2"
      },
      {
        "article": {
          "sentences": [
            {
              "text": "公園で線香花火を楽しんでいます。",
              "voice": "voice_3_1"
            },
            {
              "text": "小さな火花がキラキラと舞い上がり、",
              "voice": "voice_3_2"
            },
            {
              "text": "まるで星が降ってくるみたい！",
              "voice": "voice_3_3"
            }
          ]
        },
        "illustration": "illustration3"
      },
      {
        "article": {
          "sentences": [
            {
              "text": "伝統的な手筒花火が始まります。",
              "voice": "voice_4_1"
            },
            {
              "text": "大人たちが勇敢に手筒を持ち上げ、",
              "voice": "voice_4_2"
            },
            {
              "text": "みんなの心がドキドキ！",
              "voice": "voice_4_3"
            }
          ]
        },
        "illustration": "illustration4"
      },
      {
        "article": {
          "sentences": [
            {
              "text": "地面に置かれたねずみ花火。",
              "voice": "voice_5_1"
            },
            {
              "text": "これからどんな動きを見せるのか、",
              "voice": "voice_5_2"
            },
            {
              "text": "みんなの目がキラキラと輝いています。",
              "voice": "voice_5_3"
            }
          ]
        },
        "illustration": "illustration5"
      },
      {
        "article": {
          "sentences": [
            {
              "text": "ねずみ花火に火がつけられ、",
              "voice": "voice_6_1"
            },
            {
              "text": "勢いよく回転しながら火花を散らします。",
              "voice": "voice_6_2"
            },
            {
              "text": "子どもたちの歓声が夜空に響き渡ります！",
              "voice": "voice_6_3"
            }
          ]
        },
        "illustration": "illustration6"
      },
      {
        "article": {
          "sentences": [
            {
              "text": "夜空に大きな花火が打ち上がり、",
              "voice": "voice_7_1"
            },
            {
              "text": "色とりどりの光が広がります。",
              "voice": "voice_7_2"
            },
            {
              "text": "『わぁー！』とみんなの目が輝いています。",
              "voice": "voice_7_3"
            }
          ]
        },
        "illustration": "illustration7"
      },
      {
        "article": {
          "sentences": [
            {
              "text": "ゴミを持ち帰るように呼びかける看板。",
              "voice": "voice_8_1"
            },
            {
              "text": "子どもたちも協力して、",
              "voice": "voice_8_2"
            },
            {
              "text": "きれいな会場を保ちます。",
              "voice": "voice_8_3"
            },
            {
              "text": "みんなで楽しい思い出を大切に！",
              "voice": "voice_8_4"
            }
          ]
        },
        "illustration": "illustration8"
      }
